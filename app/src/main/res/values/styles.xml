<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/warm_red</item>
        <item name="colorPrimaryDark">@color/dark_warm_red</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
        <item name="popupTheme">@style/popupTheme</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="selectableItemBackground">@drawable/selectable_background</item>
    </style>

    <style name="AppBaseTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/warm_red</item>
        <item name="colorPrimaryDark">@color/dark_warm_red</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
        <item name="popupTheme">@style/popupTheme</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="selectableItemBackground">@drawable/selectable_background</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="popupTheme" parent="AppBaseTheme.Light">

        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="popupMenuStyle" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHighlight">@color/warm_red</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="SettingTheme" parent="AppBaseTheme.Light">

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="colorAccent">@color/warm_red</item>
    </style>

    <style name="MainTheme" parent="AppBaseTheme.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorAccent">@color/warm_red</item>
    </style>

    <style name="AboutTheme" parent="AppBaseTheme.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorPrimary">@color/warm_red</item>
        <item name="colorPrimaryDark">@color/dark_warm_red</item>
    </style>

    <style name="ToolbarTheme" parent="AppBaseTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <style name="NotesItemTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/dark_grey</item>
        <item name="android:textColorSecondary">#848484</item>
        <item name="colorPrimary">@color/warm_red</item>
        <item name="colorPrimaryDark">@color/dark_warm_red</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/warm_red</item>
        <item name="colorPrimaryDark">@color/dark_warm_red</item>
        <item name="colorAccent">@color/warm_red</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textCursorDrawable">@drawable/note_cursor_drawable</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
